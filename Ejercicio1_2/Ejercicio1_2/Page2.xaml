<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio1_2.Page2">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="Nombre" HorizontalTextAlignment="Start" TextColor="White" FontSize="21" Padding="10"/>
            <Label Text="{Binding Nombre}" Padding="30,10,30,10" FontSize="21"/>
            <Label Text="Apellidos" HorizontalTextAlignment="Start" TextColor="White" FontSize="21" Padding="10"/>
            <Label Text="{Binding Apellidos}" Padding="30,10,30,10" FontSize="21"/>
            <Label Text="Edad" HorizontalTextAlignment="Start" TextColor="White" FontSize="21" Padding="10"/>
            <Label Text="{Binding Edad}" Padding="30,10,30,10" FontSize="21"/>
            <Label Text="Correo Electronico" HorizontalTextAlignment="Start" TextColor="White" FontSize="21" Padding="10"/>
            <Label Text="{Binding Correo}" Padding="30,10,30,10" FontSize="21"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>